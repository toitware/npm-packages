{
  "name": "@toit/code-block",
  "version": "0.4.2",
  "description": "A wrapper around CodeMirror that adds toit branding and additional functionality",
  "license": "MIT",
  "repository": "https://github.com/toitware/npm-packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "mkdir -p dist/ && cp src/*.css dist/ && tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "lint": "eslint . --ext .js,.ts --ignore-path='../../.eslintignore'",
    "test": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "resolutions": {
    "**/react": "17.0.2",
    "**/react-dom": "17.0.2"
  },
  "dependencies": {
    "codemirror-theme-vars": "^0.1.1",
    "use-codemirror": "^0.2.0"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@mui/material": "^5.0.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@mui/material": "^5.0.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/react-dom": "^17.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
